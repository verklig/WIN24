<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewData["Title"] - Alpha Portal</title>
  <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous">
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
  <script type="importmap"></script>
  <script defer src="~/js/site.js" asp-append-version="true"></script>
  @await Html.PartialAsync("_Favicons")
</head>
<body data-show-add="@ViewData["ShowAddForm"]" data-show-edit="@ViewData["ShowEditForm"]">

  <div class="portal">
    <div class="logotype">
      @await Html.PartialAsync("Partials/Components/_AlphaLogotype")
    </div>
    <div class="side">
      @await Html.PartialAsync("Partials/Components/_NavLinks")
    </div>
    <div class="top">
      @await Html.PartialAsync("Partials/Components/_NavTop")
    </div>
    <div class="main">
      @RenderBody()
    </div>
  </div>

  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
