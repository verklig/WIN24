@model Domain.Models.Client

<div class="card-menu menu hidden" id="card-menu-@Model.Id">
  <button class="btn flex" onclick="navigateToEdit('@Model.Id')">
    <img src="~/images/edit-icon.svg" alt="Edit Icon" class="invert-when-dark">
    <span>Edit</span>
  </button>

  <div class="horizontal-divider"></div>

  <form asp-controller="Admin" asp-action="DeleteClient" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this client?');">
    
    @Html.AntiForgeryToken()

    <button class="btn flex" type="submit">
      <img src="~/images/delete-icon.svg" alt="Delete Icon">
      <span id="delete-text">Delete Client</span>
    </button>
  </form>
</div>

<script>
  function navigateToEdit(id) {
    if (!id) return;
    window.location.href = `/admin/clients/edit/${id}`;
  }
</script>